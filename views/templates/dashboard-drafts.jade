.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
  form.row(ng-submit="createArticle()")
    .col-xs-10
      textarea.title-input.clear-input(title-case type='text' ng-model="newArticle.title" placeholder="Title" ng-change="silentSave()")
    .col-xs-2
      br
      button.btn.btn-primary(type='submit' ng-disabled="!newArticle.title") New Article
  hr
  div(ng-repeat="article in user.drafts" ng-include="'templates/_article-draft.jade'")

